<project default="jar" name="args4j" basedir=".">
  <!--Build properties-->
  <property name="src.encoding" value="ISO-8859-1"></property>
  <property name="defaulttargetdir" value="${basedir}/target"></property>
  <property name="classesdir" value="${basedir}/target/classes"></property>
  <property name="javadocdir" value="${basedir}/dist/docs/api"></property>
  <property name="final.name" value="args4j"></property>

  <target name="compile">
    <mkdir dir="${classesdir}"/>
    <javac destdir="${classesdir}" deprecation="true" debug="true" optimize="false" excludes="**/package.html" encoding="${src.encoding}">
      <src>
        <pathelement location="${basedir}/src"></pathelement>
      </src>
    </javac>
    <copy todir="${classesdir}">
      <fileset dir="${basedir}/src">
        <include name="**/*.properties"></include>
        <include name="META-INF/services/*"></include>
      </fileset>
    </copy>
  </target>
  <target name="jar" description="o Create the jar" depends="compile">
    <jar jarfile="${defaulttargetdir}/${final.name}.jar" excludes="**/package.html" basedir="${classesdir}"></jar>
  </target>
  <target name="javadoc" description="o Generate javadoc">
    <mkdir dir="${javadocdir}"></mkdir>
    <property name="copyright" value="Copyright &amp;copy;  Kohsuke Kawaguchi. All Rights Reserved."></property>
    <property name="title" value="args4j 2.0.20 API"></property>
    <tstamp>
      <format pattern="2003-yyyy" property="year"></format>
    </tstamp>
    <javadoc use="true" private="true" destdir="${javadocdir}" author="true" version="true" sourcepath="${basedir}/src" packagenames="org.kohsuke.args4j.*" encoding="${src.encoding}"/>
  </target>
</project>
